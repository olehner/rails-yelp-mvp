<%= form_for(@restaurant) do |t| %>

<% if @restaurant.errors.any? %>
<div id="error_explanation">
  <ul>
    <% @restaurant.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= t.label :name %>
<%= t.text_field :name %>

<%= t.label :address %>
<%= t.text_field :address %>

<%= t.label :phone_number %>
<%= t.text_field :phone_number %>

<%= t.label :category %>
<%= t.text_field :category %>

<%= t.submit %>
<% end %>
